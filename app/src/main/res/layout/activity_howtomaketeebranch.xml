<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.howtomaketeebranch">

    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="320dp"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:orientation="vertical">


        <Button
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:foreground="@drawable/equalteebranch"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="equal tee branch" />

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:foreground="@drawable/unequalteebranch"
            android:layout_marginBottom="10dp"
            android:text="unequal tee branch" />

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:foreground="@drawable/equallateraltee"
            android:layout_marginBottom="10dp"
            android:text="equal lateral tee branch" />

        <Button
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:foreground="@drawable/unequallateraltee"
            android:text="unequal lateral tee branch" />

    </LinearLayout>





</ScrollView>